<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container mt-3 mb-3">
        <hr>
        <h2>Criar nova categoria</h2>
        <a href="/admin/categories/new" class="btn btn-outline-info">Criar Categoria</a>
        <hr>
        <div class="card bg-secondary text-light">
            <div class="card-header text-center">
                <h3>Categorias</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-light text-dark text-center">
                            <tr>
                                <th scope="col">#ID</th>
                                <th scope="col">#Título</th>
                                <th scope="col">#Slug</th>
                                <th scope="col">#Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% categories.forEach(category =>{ %>
                             <tr>
                                 <th scope="row" class="text-center"><%= category.id %></th>
                                 <td><%= category.title%></td>
                                 <td><%= category.slug%></td>
                                 <td class="text-center d-flex flex-nowrap justify-content-center">
                                     <button class="btn btn-warning">Editar</button>
                                     <button type="button" class="btn btn-danger ml-2" data-toggle="modal" data-target="#delete<%= category.id %>">
                                        Apagar
                                      </button>
                                        <div class="modal fade" id="delete<%= category.id %>" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                              <div class="modal-content">
                                                <div class="modal-header">
                                                  <h5 class="modal-title text-dark" id="TituloModalCentralizado">Deseja apagar essa categoria?</h5>
                                                  <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                                    <span aria-hidden="true">&times;</span>
                                                  </button>
                                                </div>
                                                <div class="modal-body text-dark">
                                                  <strong>Id: <%= category.id%> | Título: <%= category.title %> |
                                                  Slug: <%= category.slug %></strong>
                                                </div>
                                                <div class="modal-footer">
                                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                                  <form action="/categories/delete" method="POST">
                                                    <input type="number" hidden="hidden" name="id" value="<%= category.id%>">
                                                    <button type="submit" class="btn btn-danger">Apagar</button>
                                                  </form>
                                                </div>
                                              </div>
                                            </div>
                                          </div>
                                     </td>
                               </tr> 
                           <% }) %> 
    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>