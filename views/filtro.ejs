<%- include('./partials/header.ejs') %>

<body id="top">
  <%- include('./partials/homenavbar.ejs') %>
  <div class="container mb-2 mt-2">
    <%- include('./partials/categories.ejs') %>
    <h2 class="pb-3 mb-4 font-italic border-bottom text-center" id="sobre">
      <%= category.title %> 
    </h2>
    <div class="row mb-5">
      <% if(articles.length > 0){%>
      <% articles.forEach(article =>{%>
      <div class="col-md-6">
        <div class="card flex-md-row mb-5 shadow-sm h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-primary"><%= category.title %></strong>
            <h4 class="mb-0">
              <a class="text-dark" href="/<%= article.slug %>"><%= article.title %></a>
            </h4>
            <div class="mb-1 text-muted"><%= new Date(article.updatedAt).toLocaleDateString() %> Ã s <%= new Date(article.updatedAt).toLocaleTimeString() %></div>
            <p class="card-text mb-auto"><%= article.sinopse %></p>
            <a href="/<%= article.slug %>" class="btn-link mt-1">Continue lendo</a>
          </div>
          <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb"
            alt="Card image cap">
        </div>
      </div>
      <% }) %>
      <% }else{%>
        <div class="col-12 px-4 mx-auto text-center mb-5">
          <h1 class="display-4 font-italic m-3">Nenhum post foi encontrado!</h1>
        </div>
      <% } %> 
    </div>
  </div>
  <%- include('./partials/homefooter.ejs') %>
</body>
<%- include('./partials/footer.ejs') %>