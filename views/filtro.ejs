<%- include('./partials/header.ejs') %>

<body>
    <%- include('./partials/homenavbar.ejs') %> 
    <div class="container mb-2 mt-2">
        <%- include('./partials/categories.ejs') %>
        <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
            <div class="col-md-6 px-0">
              <h1 class="display-4 font-italic">Blog do WeneDev</h1>
              <p class="lead my-3">Várias linhas formando uma introdução, informando novos leitores rápido e eficientemente sobre o que é mais interessante, neste post.</p>
            </div>
        </div>

        <div class="row mb-2">
            <% articles.forEach(article =>{%>
                    <div class="col-md-6">
                      <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                          <strong class="d-inline-block mb-2 text-primary"><%= category.title %></strong>
                          <h4 class="mb-0">
                            <a class="text-dark" href="/<%= article.slug %>"><%= article.title %></a>
                          </h4>
                          <div class="mb-1 text-muted"><%=  %></div>
                          <p class="card-text mb-auto"><%= article.sinopse %></p>
                          <a href="/<%= article.slug %>" class="btn btn-outline-primary">Continue lendo</a>
                        </div>
                        <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" alt="Card image cap">
                      </div>
                    </div>
            <% }) %>
        </div>
    </div>
</body>
<%- include('./partials/footer.ejs') %>