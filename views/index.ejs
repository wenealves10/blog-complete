<%- include('./partials/header.ejs') %>

<body id="top">
    <%- include('./partials/homenavbar.ejs') %> 
    <div class="container mb-2 mt-2">
        <%- include('./partials/categories.ejs') %>
        <div class="jumbotron p-3 p-md-5 text-white rounded bg-secondary">
            <div class="col-md-6 px-0 mx-auto text-center">
              <h1 class="display-4 font-italic">Blog do WeneDev</h1>
              <p class="lead my-3">Várias linhas formando uma introdução, informando novos leitores rápido e eficientemente sobre o que é mais interessante, neste post.</p>
            </div>
        </div>
        <h3 class="pb-3 mb-4 font-italic border-bottom">
          Posts recentes!
        </h3>
        <div class="row mb-1">
            <% articles.forEach(article =>{%>
                    <div class="col-md-6">
                      <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                          <strong class="d-inline-block mb-2 text-primary"><%= article.category.title %></strong>
                          <h4 class="mb-0">
                            <a class="text-dark" href="/<%= article.slug %>"><%= article.title %></a>
                          </h4>
                          <div class="mb-1 text-muted"><%=  %></div>
                          <p class="card-text mb-auto"><%= article.sinopse %></p>
                          <a href="/<%= article.slug %>" class="btn btn-outline-primary">Continue lendo</a>
                        </div>
                        <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" alt="Card image cap">
                      </div>
                    </div>
            <% }) %>
        </div>
        <nav class="blog-pagination d-flex justify-content-end">
          <a class="btn btn-outline-secondary disabled" href="/">Mais novos</a>
          <a class="btn btn-outline-primary ml-2" href="/articles/page/2">Mais antigos</a>
        </nav>
    </div>
    <%- include('./partials/homefooter.ejs') %> 
</body>
<%- include('./partials/footer.ejs') %>